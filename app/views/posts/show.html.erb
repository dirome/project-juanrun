<div id = "post_content">
<p> </p>
<h1 class = "title"><%= @post.title %> </h1>

<p class = "date">
Submiited <%= time_ago_in_words(@post.created_at) %> Ago
<% if current_juan %>
<%= link_to 'Edit', edit_post_path(@post) %>
<a href = "/posts/<%= @post.id%>/delete" confirm = "Are you sure you want to delete this job?"> Close Job </a>
<% end %>
</p>


<p>Job location: <%= @post.location %> </p>
<p class = "body">
 <%= @post.description %> </p>
<% if current_juan %>
 <h2> <%= @post.comments.count %> runners are interested in this job </h2>
 <%= render @post.comments %>
 <% elsif current_runner %>
  <%= render 'comments/form'%>
  <% else %>
<% end %>

